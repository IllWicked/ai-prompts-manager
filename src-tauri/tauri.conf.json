{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude AI Prompts",
  "version": "2.10.0",
  "identifier": "com.claude.prompts",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "width": 900,
        "minHeight": 500,
        "minWidth": 600,
        "resizable": true,
        "title": "Claude AI Prompts",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "publisher": "Wicked",
    "icon": [
      "icons/icon.ico"
    ],
    "targets": ["nsis"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/YOUR_USERNAME/claude-prompts-app/releases/latest/download/latest.json"
      ],
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    }
  }
}
