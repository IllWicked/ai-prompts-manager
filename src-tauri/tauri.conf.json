{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Prompts Manager",
  "version": "3.0.0",
  "identifier": "com.ai.prompts.manager",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "width": 900,
        "minHeight": 500,
        "minWidth": 600,
        "resizable": true,
        "title": "AI Prompts Manager",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "publisher": "Wicked",
    "icon": [
      "icons/icon.ico"
    ],
    "targets": ["nsis"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["Russian"],
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/IllWicked/ai-prompts-manager/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQxQzkzRTVFOEMwQTdFRDYKUldUV2ZncU1YajdKMGJqUCtnaUY4MytDS3hZQkp3NUcvRGlYY3c3WFU1dEluL2Rwek5TWUZoeVYK"
    }
  }
}
